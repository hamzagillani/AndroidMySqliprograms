<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:id="@+id/reg_edit_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/reg_edit_user_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_edit_name_id"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="user name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/login_edit_user_pass_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="user password"
        android:layout_below="@id/reg_edit_user_name_id"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/reg_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:onClick="user_register"
        android:layout_below="@+id/login_edit_user_pass_id"/>

</RelativeLayout>