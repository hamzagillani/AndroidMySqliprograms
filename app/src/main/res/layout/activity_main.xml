<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/login_edit_user_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="user name"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/login_edit_user_pass_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="user password"
        android:layout_below="@id/login_edit_user_name_id"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/login_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:onClick="user_login"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/login_edit_user_pass_id"/>
    <Button
        android:id="@+id/reg_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:layout_marginTop="20dp"
        android:onClick="register"
        android:layout_centerInParent="true"
        android:layout_below="@+id/login_btn_id"/>




</RelativeLayout>